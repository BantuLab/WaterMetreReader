<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dest_login_fragment">

    <fragment
        android:id="@+id/dest_login_fragment"
        android:name="com.bantulogic.core.watermetrereader.UI.Fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_dest_login_fragment_to_dest_nested_home_nav_graph"
            app:destination="@id/nested_home_nav_graph"
            app:launchSingleTop="true"
            app:popUpTo="@id/dest_logout_fragment"

            />

    </fragment>

    <navigation
        android:id="@+id/nested_home_nav_graph"
        app:startDestination="@id/dest_readings_fragment">
        <fragment
            android:id="@+id/dest_readings_fragment"
            android:name="com.bantulogic.core.watermetrereader.UI.Fragments.ReadingsFragment"
            android:label="fragment_readings"
            tools:layout="@layout/fragment_readings" />
        <fragment
            android:id="@+id/dest_dashboard_fragment"
            android:name="com.bantulogic.core.watermetrereader.UI.Fragments.DashboardFragment"
            android:label="fragment_dashboard"
            tools:layout="@layout/fragment_dashboard">
            <action
                android:id="@+id/action_dest_dashboard_fragment_to_dest_login_fragment"
                app:destination="@id/nested_home_nav_graph"
                app:popUpTo="@id/dest_readings_fragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/dest_logout_fragment"
            android:name="com.bantulogic.core.watermetrereader.UI.Fragments.LogoutFragment"
            android:label="fragment_logout"
            tools:layout="@layout/fragment_logout" />
    </navigation>
</navigation>